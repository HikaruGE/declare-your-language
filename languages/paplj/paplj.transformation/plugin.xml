<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>
   <extension
         point="org.eclipse.imp.runtime.languageDescription">
      <language
            extensions="pj"
            description="PAPLJ"
            language="PAPLJ"
            derivedFrom="DynamicRoot"
            validator="paplj.transformation.PAPLJValidator"
            validatorClass="paplj.transformation.PAPLJValidator"
      ></language>
   </extension>
   <extension
         id="paplj.transformation.parser"
         name="PAPLJ Parser"
         point="org.eclipse.imp.runtime.parser">
      <parser
            class="paplj.transformation.PAPLJParseController"
            language="PAPLJ">
      </parser>
   </extension>    
</plugin>

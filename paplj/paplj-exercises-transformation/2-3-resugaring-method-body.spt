module ex2-3-resugaring-method-body

// solve in: trans/desugar/resugar-rules.str

language paplj

start symbol Program


test method body [[
  program tst 
    class A {
      Num x
      Num getX() {
        this.x;
      }
    }
  run 1
]] parse
to Program(
      "tst"
    , [ Class(
          "A"
        , NoExtends()
        , [Field(NumT(), "x")]
        , [ Method(
              NumT()
            , "getX"
            , []
            , Do([Get(This(), "x"), Skip()])
            )
          ]
        )
      ]
    , Num("1")
    )

